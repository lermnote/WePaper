/* components/calender/calender.wxss */

.year {
  display: flex;
  justify-content: space-around;
  font-size: 32rpx;
  color: #404040;
  margin-bottom: 40rpx;
}

.calender .week {
  display: flex;
  flex-direction: row;
  background-color: #ae000a;
  color: #fff;
  padding: 8rpx 0 8rpx;
}

.calender .week text {
  width: calc(100%/7);
  text-align: center;
  font-size: 12pt;
}

.calender .date text {
  width: calc(100%/7);
  display: inline-block;
  text-align: center;
  font-size: 12pt;
  padding: 10rpx 0 10rpx;
}

/* 模态框 */

.calender {
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #eaeaea;
  padding: 30rpx 0 20rpx;
  color: #404040;
  background-color: #fff;
  width: 100%;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
}

.modal-dialog {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  margin: 0 auto;
  z-index: 9999;
}

.weekend {
  color: #aaa;
}

.tapthis {
  background-color: #ae000a;
  color: #fff;
  border-radius: 10rpx;
}
.weui-btn.mini-btn {
  background-color: #ae000a;
}
